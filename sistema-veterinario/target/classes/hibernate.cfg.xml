<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- =================================== -->
        <!-- Configurações Básicas do Hibernate -->
        <!-- =================================== -->
        
        <!-- Dialeto para SQLite -->
        <property name="hibernate.dialect">org.sqlite.hibernate.dialect.SQLiteDialect</property>
        
        <!-- Driver JDBC -->
        <property name="hibernate.connection.driver_class">org.sqlite.JDBC</property>
        
        <!-- URL de Conexão com o Banco SQLite -->
        <property name="hibernate.connection.url">jdbc:sqlite:database.sqlite</property>
        
        <!-- =================================== -->
        <!-- Configurações de Pool de Conexões -->
        <!-- =================================== -->
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>

        <!-- =================================== -->
        <!-- Configurações de Comportamento -->
        <!-- =================================== -->
        
        <!-- Atualiza automaticamente o schema do banco -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <!-- Mostra as SQLs geradas no console (útil para debug) -->
        <property name="hibernate.show_sql">true</property>
        
        <!-- Formata as SQLs para melhor legibilidade -->
        <property name="hibernate.format_sql">true</property>
        
        <!-- Habilita estatísticas (opcional) -->
        <property name="hibernate.generate_statistics">false</property>

        <!-- =================================== -->
        <!-- Mapeamento das Entidades -->
        <!-- =================================== -->
        
        <!-- IMPORTANTE: Mapear apenas as classes CONCRETAS -->
        <mapping class="entity.Cachorro"/>
        <mapping class="entity.Gato"/>
        <mapping class="entity.Serpente"/>
        <mapping class="entity.TartarugaMarinha"/>

    </session-factory>
</hibernate-configuration>