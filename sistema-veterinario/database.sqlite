CREATE DATABASE IF NOT EXISTS sistema_animais;
USE sistema_animais;

CREATE TABLE IF NOT EXISTS animais_domesticos (
    id BIGINT PRIMARY KEY AUTO_INCREMENT,
    nome VARCHAR(100) NOT NULL,
    idade INT,
    peso DECIMAL(5,2),
    tipo VARCHAR(20) NOT NULL,
    raca VARCHAR(50),
    porte VARCHAR(20),
    pelagem VARCHAR(50),
    data_cadastro TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE IF NOT EXISTS animais_silvestres (
    id BIGINT PRIMARY KEY AUTO_INCREMENT,
    habitat_natural VARCHAR(100) NOT NULL,
    origem VARCHAR(100),
    dieta_padrao VARCHAR(100),
    tipo VARCHAR(20) NOT NULL,
    comprimento DECIMAL(5,2),
    comprimento_casco DECIMAL(5,2),
    local_encalhe VARCHAR(100),
    data_cadastro TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

